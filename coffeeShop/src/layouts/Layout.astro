---
import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";

interface Props {
  title: string;
  subTitle: string;
  bgImage: string;
}
const { title, subTitle, bgImage,  } = Astro.props;

import "@/styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cafeter√≠a desde 1938 | {title}</title>
    <link rel="icon" type="image/svg+mxl" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:ital,wght@0,400;0,700;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-coffee-100">
    <Header bgImage={bgImage} subTitle={subTitle} />
    <slot name="before-main-content" />
    <main class="bg-white p-20 max-w-7xl mx-auto lg:-mt-20 relative">
      <slot />
    </main>

    <slot name="after-main-content" />
    <Footer />
  </body>
</html>
